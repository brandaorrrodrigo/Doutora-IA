# Vercel - Frontend Configuration
# Copie estas variáveis no Vercel Dashboard > Settings > Environment Variables

# API Endpoints (será gerado pelo Railway, preencher depois)
NEXT_PUBLIC_API_QUESTOES=https://api-questoes.railway.app
NEXT_PUBLIC_API_MAPAS=https://api-mapas.railway.app

# Build Configuration
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MONITORING=true

# Sentry (opcional para error tracking)
SENTRY_ENABLED=false
SENTRY_DSN=

# Cache
NEXT_PUBLIC_CACHE_REVALIDATE=60

# Debug
NEXT_DEBUG=false
