{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "api/Dockerfile"
  },
  "deploy": {
    "startCommand": "cd api && python -m uvicorn main:app --host 0.0.0.0 --port 8080",
    "numReplicas": 1,
    "restartPolicyMaxRetries": 3
  },
  "plugins": {
    "postgres": {
      "version": "14"
    }
  },
  "variables": {
    "PORT": "8080",
    "ENVIRONMENT": "production",
    "OLLAMA_URL": "http://ollama:11434",
    "DATABASE_URL": "${{ database.DATABASE_URL }}",
    "API_KEY": "${{ secrets.API_KEY }}",
    "USE_REAL_RAG": "true",
    "CORS_ORIGINS": "https://doutora-ia-landing.vercel.app,https://www.doutoraia.com"
  },
  "services": [
    {
      "name": "api-questoes",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python -m uvicorn api_questoes:app --host 0.0.0.0 --port 8042",
      "healthCheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10
      }
    },
    {
      "name": "api-mapas",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "python -m uvicorn api_mapas_flashcards:app --host 0.0.0.0 --port 8041",
      "healthCheck": {
        "path": "/health",
        "interval": 30,
        "timeout": 10
      }
    }
  ]
}
