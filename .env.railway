# Railway - Backend Configuration
# Copie estas variáveis no Railway Dashboard

# Banco de Dados (será gerado pelo Railway)
DATABASE_URL=postgresql://user:password@host:5432/doutora
PGPASSWORD=password

# API
PORT=8080
ENVIRONMENT=production
API_KEY=YOUR_SECURE_API_KEY_HERE_CHANGE_ME

# LLM - Ollama (Railway internal)
OLLAMA_URL=http://ollama:11434
LLM_MODEL_CHAT=llama3.1:8b-instruct
LLM_MODEL_TRIAGE=llama3.1:8b-instruct

# RAG Configuration
USE_REAL_RAG=true
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_key

# CORS - Permitir Vercel
CORS_ORIGINS=https://doutora-ia-landing.vercel.app,https://www.doutoraia.com,http://localhost:3000

# PostgreSQL Driver
SQLALCHEMY_ECHO=false
POOL_SIZE=5
MAX_OVERFLOW=10

# Timeouts
REQUEST_TIMEOUT=30
DATABASE_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
